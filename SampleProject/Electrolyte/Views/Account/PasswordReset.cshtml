@model Electrolyte.Models.RegisterViewModel
@{
    ViewBag.Title = "Reset Password";
}

<h2>@ViewBag.Title.</h2>
<hr />

@ViewBag.Message

@using (Html.BeginForm("PasswordReset", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.Password("Password", "", new { @class = "recoverPasswordInput", @placeholder = "Password..." })
    <br />
    @Html.Password("ConfirmPassword", "", new { @class = "recoverPasswordInput", @placeholder = "Confirm Password..." })
    <br />

    <input type="submit" class="recoverPasswordButton" value="CHANGE PASSWORD" />
}
<div class="clearfix"></div>