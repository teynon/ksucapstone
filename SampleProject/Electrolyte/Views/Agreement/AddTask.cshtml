@{
    Layout = null;
}

<div class="agreementTask" data-id="@ViewBag.task.id">
    <div class="redDot"></div>
    <span class="taskTitle">@ViewBag.task.title</span>
    <span class="taskDetails"> - @ViewBag.task.description</span>
    <div class="taskDate">@ViewBag.task.datetime.ToString("MMMM d, yyyy h:mm tt")</div>
</div>