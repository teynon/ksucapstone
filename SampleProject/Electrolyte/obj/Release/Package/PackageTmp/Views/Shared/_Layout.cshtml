@{
    ViewBag.logo = "logo";
}
@if (Strings.IsPath("/") || Strings.IsPath("") || Strings.IsPath("Home/Index"))
{
    ViewBag.logo = "logo_home";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FollowThru</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
    @if (Request.IsAuthenticated)
    {
        @Scripts.Render("~/Content/main.js")
    }
    @Scripts.Render("~/Content/Feedback.js")
    @Styles.Render("~/Content/css")

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-49581919-1', 'followthru.co');
        ga('send', 'pageview');

    </script>
</head>
<body>
    <div class="body-main">
        <div class="left-content">
            <a href="@Strings.GetBaseURL()"><img src="/Content/@(ViewBag.logo).png" alt="FollowThru" class="logo" /></a>
            <br />
                        @Html.Partial("_LoginPartial")
            <div class="feedback" onclick="com.Feedback.open();">Send Feedback</div>
        </div>
        <div class="main-content">
            <div class="navbar navbar-inverse">
                <div class="container">
                    <div class="">
                        @if (!Request.IsAuthenticated)
                        {
                        <div class="navbar-panel">
                            <ul class="nav navbar-main">
                                @Html.Raw(Strings.GetLink("Create Account", "Account/Register"))
                                @Html.Raw(Strings.GetLink("About", "Home/About"))
                                @Html.Raw(Strings.GetLink("Pricing & Plans", "Home/Pricing"))
                                @Html.Raw(Strings.GetLink("Contact", "Home/Contact"))
                            </ul>
                        </div>
                        } else {
                            <div class="navbar-panel">
                                <ul class="nav navbar-main">
                                    @Html.Raw(Strings.GetLink("Dashboard", "Dashboard/Index"))
                                    @if (Strings.IsPath("Agreement/Create"))
                                    {
                                        @Html.Raw(Strings.GetLink("Create Agreement", "Agreement/CreateAgreement"))
                                    }
                                    else
                                    {
                                        <li><a href="#" onclick="com.CreateAgreement.open();">Create Agreement</a></li>
                                    }
                                    @Html.Raw(Strings.GetLink("Pricing & Plans", "Home/Pricing"))
                                    @Html.Raw(Strings.GetLink("Log Out", "Account/LogOff"))
                                </ul>
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
            <div class="container body-content">
                @RenderBody()
                <br />
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <footer>
        <div class="footerBlock">
            <div class="footerLinkBlock">
                <div class="footerHeader">Services</div>
                @Html.Raw(Strings.GetRawLink("Pricing & Plans", "Home/Pricing"))
            </div>
            <div class="footerLinkBlock">
                <div class="footerHeader">Support</div>
                <a href="mailto:byron@followthru.com">Email Support</a>
            </div>
            <div class="clearfix"></div>
            <div class="copyright">
                <p>&copy; @DateTime.Now.Year - FollowThru</p>
            </div>
        </div>
    </footer>
    
    @RenderSection("scripts", required: false)
</body>
</html>
