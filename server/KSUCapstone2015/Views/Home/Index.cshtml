<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div id="map">
        <section class="main_hud">
            <div id="main_status">
                Ready.
            </div>
            <div class="main_overlay">
                <section>
                    <div class="dateselect">
                        From <input type="text" name="datestart" id="datestart" value="01/01/2013 12:00:00 am" />
                    </div>
                    <div class="dateselect">
                        to <input type="text" name="dateend" id="dateend" value="01/01/2013 01:00:00 am" />
                    </div>
                </section>
                <section>
                    <!-- This goes away when they can adjust the width / height via mouse. -->
                    <span>
                        <input type="number" step="50" id="area" min="1" value="" max="5000" /> meters
                    </span>
                    <button id="btnReport">Report</button>
                    <button id="btnReport2">Report 2</button>
                    <button id="btnReport3">Report 3</button>
                </section>
            </div>
        </section>
    </div>
    <div id="report">

    </div>
</body>
</html>