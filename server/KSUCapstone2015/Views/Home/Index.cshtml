<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div id="map">
        <section class="main_hud">
            <div class="main_status hud" id="main_status">
                Ready.
            </div>
            <div class="playback hud">
                <span>Playback:</span>
                <div>
                    <input id="playbackScroller" type="range" steps="5" min="0" max="100" value="0" />
                </div>
                <button id="playbackBtn">Play</button>
            </div>
            <div class="main_overlay hud">
                <section>
                    <div class="dateselect">
                        <label>From</label> <input type="text" name="datestart" id="datestart" value="01/01/2013 12:00:00 am" />
                    </div>
                    <div class="dateselect">
                        <label>to</label> <input type="text" name="dateend" id="dateend" value="01/01/2013 01:00:00 am" />
                    </div>
                    Show Pickups: <input type="checkbox" id="showPickups" value="1" />
                    <label style="margin-left:5px">Area Selection Mode:</label>
                    <select id="selectMode" style="margin-top: -5px; padding: 0px; display:inline;">
                        <option value="single">Single</option>
                        <option value="multi">Multi</option>
                    </select>
                </section>
                <section>
                    <!-- This goes away when they can adjust the width / height via mouse. -->
                    <span>
                        <input type="checkbox" id="draw_selection" value="false"/> draw selection &nbsp;&nbsp;
                        <input type="number" step="50" id="area" min="1" value="" max="5000" /> meters
                    </span>
                    <button id="sideBySide">Side By Side</button>
                    <button id="btnReport">Report</button>
                    <button id="btnClear">Clear Map</button>
                </section>
            </div>
        </section>
    </div>
    <div id="mapCloneContainer">
        <div id="mapClone" class="mapClone"></div>
    </div>
    <div id="report">

    </div>
</body>
</html>